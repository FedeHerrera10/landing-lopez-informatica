---
import { Image } from 'astro:assets';
import Hero from '../assets/hero.jpg';
import {header} from '../data';
import Nav from './Nav.astro';

---


<header class="relative text-slate-200  bg-custom-gradient">
   <Nav/>
   
    <div class="max-w-md mx-auto md:max-w-lg lg:flex lg:justify-between lg:items-center lg:max-w-5xl lg:gap-9 xl:max-w-6xl 2xl:max-w-7xl"> 
        <div class="pt-24 flex justify-center items-center flex-col z-10 lg:w-1/2 md:pt-32  ">
            <h1 class="text-3xl font-extrabold tracking-wider text-center md:text-5xl  lg:text-6xl xl:text-7xl t-left">{header.title}</h1>
            <p class="text-md text-center text-slate-400 mt-3 lg:text-lg xl:text-xl t-left">{header.description}</p>
            <button class="mt-10 bg-blue-700 rounded-xl w-full max-w-60 hover:bg-blue-600 transition-colors lg:max-w-80 t-left">
                <a href="#contactanos" class="block p-4">Contactanos</a>
            </button>
       </div>
       
       <div class="mt-14 mx-auto  p-1 bg-blue-950 rounded-lg  w-11/12  shadow-[-3px_3px_100px_-11px_#228be6]  lg:w-1/2 lg:mt-32 hero">
           <Image src={Hero} alt='hero-image' class='w-full rounded-lg h-[500px] lg:h-[600px] xl:h-[650px] object-cover'  />
       </div>
   </div>
</header>
