---
interface Props {
    title:string,
    content:string,
    urlImg: string | ImageMetadata;
    alt: string;
    
}

import type { ImageMetadata } from "astro";
import { getImage } from "astro:assets";
const { title,content,urlImg,alt} = Astro.props;

const img = await getImage({
    src: urlImg,
});

---

<article class="relative  bg-[url('../assets/cuadre.svg')] border rounded-md border-slate-600 w-full h-full 
after:content-[''] after:bg-gradient-to-b after:from-gray-900 after:via-blue-800 after:to-blue-700 
after:absolute after:top-0 after:bottom-0 after:left-0 after:right-0 after:opacity-20 after:-z-10 animation-top">
    <div class="flex flex-col justify-center items-center w-11/12 mx-auto py-8 text-center">
        <h3 class=" font-bold text-xl shadow-md lg:text-xl 2xl:text-2xl">{title}</h3>
        <p class="my-8 text-slate-400 lg:text-md xl:text-lg leading-6">{content}</p>
        <picture class="w-full max-w-[400px] lg:w-full ">
            <img src={img.src} alt={alt} class='w-full rounded-lg h-60  object-cover border-2  border-slate-600 lg:h-64'>
        </picture>
    </div>
</article>