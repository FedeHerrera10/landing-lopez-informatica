---

import { Image } from 'astro:assets';
import AboutImg from '../../assets/about.jpg';
import {about,titleApp,owner} from '../../data';
import TextGradient from '../ui/TextGradient.astro';
import SectionBase from './SectionBase.astro';
---
<SectionBase id="nosotros">
    <div class="mt-10 flex flex-col justify-center items-center ">
        <h2 class="text-3xl font-extrabold text-center  lg:text-4xl xl:text-5xl pt-10 animation-top">{about.title}</h2>
        <p class="text-md mt-10 text-slate-400  leading-6 md:text-pretty lg:text-lg 2xl:text-xl animation-top">
            <TextGradient text={titleApp}/>, es una empresa riojana  creada por 
            <span class="underline">{owner} </span> {about.description}
        <div class="mt-14  max-w-md mx-auto  p-1 bg-blue-900 rounded-lg  w-11/12  shadow-[-3px_3px_100px_-11px_#228be6] relative lg:max-w-xl
        after:absolute after:w-full after:top-0 after:bottom-0 after:left-0 after:right-0 after:bg-blue-800 after:rounded-lg after:opacity-10 animation-top">
            <Image src={AboutImg} alt='' class='w-full rounded-lg h-[500px] object-cover '/>
        </div>
        <button class="mt-10 bg-blue-700  rounded-xl w-full max-w-60 hover:bg-blue-600 transition-colors text-slate-200 animation-top">
            <a href="/about" class="p-4 block">Conocenos m√°s</a>
        </button>
   </div>
</SectionBase>